<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

        <!--scan for annotations-->
        <context:annotation-config/>

        <!-- setup the frontend -->
        <bean id="frontend" class="de.zib.gndms.vold.Frontend">
                <property name="volatileDirectory" ref="replication" />
        </bean>

        <!-- setup reaper -->
        <bean id="reaper" class="de.zib.gndms.vold.Reaper">
                <property name="TTL" value="20000" />
                <property name="slicedDirectory" ref="replication" />
        </bean>

        <!-- setup replication -->
        <bean id="replication" class="de.zib.gndms.vold.ReplicatedVolatileDirectory">
                <property name="directory" ref="voldi1" />
                <property name="replicator" ref="replicationwrapper" />
        </bean>

        <bean id="replicationwrapper" class="de.zib.gndms.vold.LocalReplicator">
                <property name="replica" ref="voldi2" />
        </bean>

        <!-- setup VolatileDirectory for backend1 -->
        <bean id="voldi1" class="de.zib.gndms.vold.VolatileDirectoryImpl">
                <property name="backend" ref="backend1" />
                <property name="timeslice" ref="timeslice" />
        </bean>

        <!-- setup VolatileDirectory for backend2 -->
        <bean id="voldi2" class="de.zib.gndms.vold.VolatileDirectoryImpl">
                <property name="backend" ref="backend2" />
                <property name="timeslice" ref="timeslice" />
        </bean>

        <!-- setup TimeSlice configuration -->
        <bean id="timeslice" class="de.zib.gndms.vold.TimeSlice">
                <property name="timeSliceSize" value="1000" />
                <property name="numberOfSlices" value="2" />
        </bean>

        <!-- setup FileSystemDirectory backend -->
        <bean id="backend2" class="de.zib.gndms.vold.FileSystemDirectory">
                <property name="rootPath" value="/tmp/fs" />
                <property name="enc" value="utf-8" />
        </bean>

        <!-- setup BabuDirectory backend -->
        <bean id="backend1" class="de.zib.gndms.vold.BabuDirectory">
                <property name="dir" value="/tmp/babu/" />
                <property name="logDir" value="/tmp/babu/log" />
                <property name="sync" value="ASYNC" />
                <property name="databaseName" value="testvold" />
                <property name="enc" value="utf-8" />
        </bean>

        <!-- setup RESTController -->
        <bean id="restcontroller" class="de.zib.gndms.vold.RESTController">
                <property name="frontend">
                        <ref bean="frontend" />
                </property>
        </bean>

        <!--setup json message converter-->
        <bean id="converter" class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter"/>

        <!--add it to the annotation controller-->
        <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
                <property name="messageConverters">
                        <list>
                                <ref bean="converter" />
                        </list>
                </property>
        </bean>
</beans>
