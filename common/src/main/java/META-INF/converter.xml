<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">


        <!-- this is the marshaller -->
        <bean id="marshaller" class="org.springframework.oxm.xstream.XStreamMarshaller">
            <property name="autodetectAnnotations" value="true"/>
        </bean>

        <!-- this is the converter for POST -->
        <bean id="converter"
              class="org.springframework.http.converter.xml.MarshallingHttpMessageConverter">
            <constructor-arg ref="marshaller" />
        </bean>

        <!--setup json message converter-->
        <!--&lt;!&ndash;&ndash;&gt;<bean id="converter" class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter"/>-->

        <!--add it to the annotation controller-->
        <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
                <property name="messageConverters">
                        <list>
                                <ref bean="converter" />
                        </list>
                </property>
        </bean>
</beans>
